{
    "name": "new-pos-desktop",
    "version": "1.0.0",
    "description": "Offline-First Point of Sale System",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder",
        "dist:win": "electron-builder --win",
        "postinstall": "electron-builder install-app-deps"
    },
    "author": "Antigravity",
    "license": "ISC",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.antigravity.newpos",
        "productName": "POS System",
        "files": [
            "main.js",
            "**/*",
            "../apps/**/*",
            "../pos_system/**/*",
            "../static/**/*",
            "../staticfiles/**/*",
            "../templates/**/*",
            "../manage.py",
            "../db.sqlite3",
            "../requirements.txt"
        ],
        "extraResources": [
            {
                "from": "../venv",
                "to": "venv",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "../static/images/logo.png"
        },
        "mac": {
            "target": "dmg",
            "icon": "../static/images/logo.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "../static/images/logo.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}